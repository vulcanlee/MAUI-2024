<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MA09.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MA09"
    Shell.FlyoutBehavior="Disabled"
    Title="MA09"
    Shell.BackgroundColor="LightPink"
    Shell.ForegroundColor="Black"
    xmlns:view="clr-namespace:MA09.Views"
    >

    <ShellContent
        Title="Number1"
        ContentTemplate="{DataTemplate view:Number1Page}"
        Route="Number1" />
    <ShellContent
        Title="Number2"
        ContentTemplate="{DataTemplate view:Number2Page}"
        Route="Number2" />
    <ShellContent
        Title="Number3"
        ContentTemplate="{DataTemplate view:Number3Page}"
        Route="Number3" />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
